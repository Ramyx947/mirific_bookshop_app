<% if notice %>
  <aside id="notice"><%= notice %></aside>
<%end%>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <td colspan='3'>
         <%= link_to 'New Book', new_book_path %>
      </td>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">

      <td class="image">
        <%= image_tag(book.image_url, class: 'list_image') %>
      </td>

      <td class= 'book-details'>
        <h1><%= book.title %></h1>
        <p>
          <%= truncate(strip_tags(book.description), length: 100) %>
        </p>
      </td>

      <td class="actions">
        <ul>
         <li> <%= link_to 'Show', book %></li>
          <li> <%= link_to 'Edit', edit_book_path(book) %></li>
          <li>
            <%= link_to 'Destroy', book,
                method: :delete,
                data: {confirm: 'Are you sure you want to delete this book?'} %>
            </li>
          </ul>
       </td>
     </tr>
    <% end %>
    </tbody>
  </table>
<br>

<%= link_to 'New Book', new_book_path %>
