<% if notice %>
  <aside id="notice"><%= notice %></aside>
<%end%>
<h1> Mirific Bookshop Catalog </h1>

<ul class="catalog">
    <%= cache @books do%>
        <% @books.each do |book|%>
            <%= cache book do%>
                <li>
                         <%= link_to image_tag(book.image_url), book %> 
                        <h2> <%= book.title %> </h2>
                        <h4> <%= book.author %> </h4>
                        <p> <%= sanitize(book.description) %> </p>
                        <div class="price">
                            <%= number_to_currency(book.price) %>
                            <%= button_to 'Add to basket', line_items_path(book_id: book),
                            remote: true %>
                        </div>
                </li>
            <%end%>
        <%end%>
    <%end%>
</ul>

